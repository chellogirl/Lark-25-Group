# !/bin/bash
# This bear is in the cave blocking your path to something shiny. Maybe it's important? 
# I still need to add in the requirement of the spear && the game over if they lose all their health

LP=100
BearLP=100

while [ $BearLP -gt 0 ]
do
echo "The Bear has $BearLP left."
echo "You have $LP left"

read -p "What do you want to attack the bear with?\n 1. Knife \n 2. Spear " weapon
case "$weapon" in

1)
BearLP=$(( $BearLP - 50 ))
echo "You attacked the bear using the spear"
;;
2)
BearLP=$(( $BearLP - 10 ))
echo "You attacked the bear using the spear"
;;
esac

echo "The bear has attacked you! You've lost 15 LP"
LP=$(( $LP - 15 ))
done
